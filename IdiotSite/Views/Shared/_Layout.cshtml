<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IdiotSite</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/css/lhqsite.css" rel="stylesheet" />
</head>
<body>
    <div>

        <aside id="left-panel" class="left-panel">

            <nav class="navbar navbar-expand-lg navbar-default">
                <div class="navbar-header">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>
                    </button>
                    <a class="navbar-brand" href="#"><img src="~/images/logo.png" alt="Logo" /></a>
                    <a class="navbar-brand hidden" href="#"><img src="~/images/logo2.png" alt="Logo" /></a>
                </div>

                <div id="main-menu" class="main-menu collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="nav-item active"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"> <i class="menu-icon fa fa-dashboard"></i>Home</a></li>
                        <li class="menu-title" >UI elements</li>

                    </ul>
                </div>
            </nav>

        </aside>

            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; 2018 - IdiotSite</p>
                </footer>
            </div>
    </div>



    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
